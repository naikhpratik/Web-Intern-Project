.panel.panel-default
  .panel-heading
    %span.h5
      = link_to media.title, admin_product_media_path(@product, media.actable_id)
    .label.label-default
      = media.specific.local_type.capitalize
    .pull-right
      .btn.btn-default.btn-xs
        = link_to('edit', edit_admin_product_media_path(@product, media.actable_id))
  .panel-body
    - if media.specific.source_url.present?
      - if media.specific.local_type == 'Video'
        = video_tag media.specific.source_url, controls: true, size: '300x200'
      - elsif media.specific.local_type == 'Audio'
        = audio_tag media.specific.source_url, controls: true
      - else
        = image_tag(media.specific.source_url, class: 'img-thumbnail')