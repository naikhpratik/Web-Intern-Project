<% f.object = f.object.specific if f.object.specific.instance_of? Modulee %>

<div class="col-md-12" style=<%= "display: hidden".html_safe if cannot? :read, f.object.content %>>
  <div class="row module_fields">
    <%= f.hidden_field :actable_type, value: 'Modulee' %>
    <%= f.hidden_field :parent_id %>

    <div class="form-group col-md-5">
      <%= f.label :name, class: 'control-label' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    
    <div class="form-group col-md-2">
      <%= link_to_remove_association "<span class='glyphicon glyphicon-minus' aria-hidden='true'></span>".html_safe, f, class: "remove_fields btn btn-sm btn-danger", data: { confirm: 'Are you sure?' }, wrapper_class: 'module_fields'  %>
    </div>
  </div>
</div>
