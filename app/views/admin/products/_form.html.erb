<div class="row">
<%= form_for [:admin, @product], html: { class: 'form col-md-6' } do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: 'control-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :visibility, class: 'control-label' %>
    <%= f.select :visibility, options_for_select(["All", "Registered Users", "Privileged Users"], ["All"]), {}, { class: 'form-control' } %>
  </div>

  <hr/>
  <h5>Add New Content</h5>
  <div class="row">
    <div class="form-group col-md-6">
      <%= select_tag :kind, options_for_select(%w[Quiz Flashcard Module Sub-module HTML Video Audio]), class: 'form-control input-sm' %>
    </div>

    <%= f.fields_for :contents do |builder| %>
      <%= render 'content_fields', f: builder %>
      <%= link_to_add_association 'Add a Quiz', f, :contents, :wrap_object => Proc.new { |content| content = Quiz.new } %>
    <% end %>

    <div class="form-group">
      <%= link_to_add_fields "Add Content", f, :contents, 'btn btn-sm btn-warning' %>
    </div>
  </div>

  <hr/>
  <div class="form-group">
      <%= f.submit class: 'btn btn-sm btn-success' %>
    </div>
<% end %>
</div>
