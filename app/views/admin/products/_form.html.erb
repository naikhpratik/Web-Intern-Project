<div class="row">
<%= form_for [:admin, @product], html: { class: 'form col-md-6' } do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: 'control-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :visibility, class: 'control-label' %>
    <%= f.select :visibility, options_for_select(["All", "Registered Users", "Privileged Users"], @product.visibility), {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= label_tag :product_managers, 'Product Managers' %>
    <% if current_user.has_role? :admin %>
      <%= select_tag 'product[managers][]', options_for_select(User.product_managers.pluck(:email), @product_managers), class: 'form-control ', multiple: true, id: 'product_managers_select_field' %>
    <% else %>
      <p><%= @product_managers.join(', ') %></p>
    <% end %>
  </div>

  <hr/>
  <%= link_to "Manage Contributors", admin_product_content_managers_path(@product), class: 'btn btn-sm btn-warning' if params[:action] == 'edit' %>

  <hr/>
  <h4>Add New Fields</h4>
  <div class="row">
    <div class="form-group nested_fields">
      <%= f.fields_for :contents do |builder| %>
        <%= render 'content_fields', f: builder %>
      <% end %>
    </div>

    <div class="btn-group col-md-12">
      <button type="button" class="btn btn-sm btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Add Field <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <% @content_types ||= [] %>
        <% @content_types.each do |m|  %>
          <li><%= link_to_add_association m.underscore.humanize.titleize, f, :contents, 'data-association-insertion-node': '.nested_fields', 'data-association-insertion-method': 'append', wrap_object: Proc.new { |content| content = m.constantize.new } %></li>
        <% end  %>
      </ul>
    </div>
  </div>
  <hr/>

  <div class="form-group">
      <%= f.submit class: 'btn btn-sm btn-success' %>
    </div>
<% end %>
</div>
