<br/>

<h5>
	<strong>Title:</strong> <%= @product.title %>
  <br/><br/>
  <strong>Visibility:</strong> <%= @product.visibility %>
</h5>
<br>
<h3>Modules</h3>
<br>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Module Name</th>
      <th>Kind</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= link_to content.name, admin_content_path(content), class: 'btn-link' %></td>
        <td><%= content.actable_type %></td>
        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Actions <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              	<li><%= link_to 'Edit', edit_admin_content_path(content) %></li>
								<li><%= link_to 'Destroy', admin_content_path(content), method: :delete, data: { confirm: 'Are you sure?' } %></li>
								<li><%= link_to 'Set Time', admin_contents_path %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>

<%= link_to 'Edit', edit_admin_product_path(@product), class: 'btn btn-sm btn-success' if can? :update, @product %>
<%= link_to 'Back', admin_products_path, class: 'btn btn-sm btn-primary' %>
