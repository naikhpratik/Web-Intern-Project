<% f.object = f.object.specific if f.object.specific.instance_of? Html %>

<div class="col-md-12">
  <div class="row html_fields">
    <%= f.hidden_field :actable_type, value: 'Html' %>
    <%= f.hidden_field :parent_id %>

    <div class="form-group col-md-10">
      <%= f.label :name, class: 'control-label' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group col-md-2">
      <%= link_to_remove_association "<span class='glyphicon glyphicon-minus' aria-hidden='true'></span>".html_safe, f, class: "remove_fields btn btn-sm btn-danger", data: { confirm: 'Are you sure?' }, wrapper_class: 'html_fields'  %>
    </div>

    <div class="form-group col-md-10">
      <%= f.label :description, class: 'control-label' %>
      <%= f.cktext_area :description, class: 'form-control' %>
    </div>
  </div>
</div>
