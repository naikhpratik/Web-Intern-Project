<h3>Account Details</h3>
<p>
	<strong>Username:</strong> <%= @user.username %>
  <br/><br/>
  <strong>Email:</strong> <%= @user.email %>

  <% if @user.roles.present? %>
    <br/><br/>
    <strong>Roles:</strong> <%= @user.roles.map(&:name).join(', ') %>
  <% end %>
</p>

<% if @user.products.present? %>
<h3>Products</h3>
<div class="row">
  <div class="col-md-5">
    <div class="row">
      <% @user.products.each do |product| %>
        <div class="col-md-6"><%= product.title %></div>
        <div class="col-md-6"><%= @user.user_products.role(product.id) %></div>
      <% end %>
    </div>
  </div>
</div>
<% end %>

<br/>
<div class="row">
  <div class="col-md-12">
    <%= link_to 'Edit', edit_admin_user_path(@user), class: 'btn btn-sm btn-success' if can? :manage, @user %>
    <%= link_to 'Back', admin_users_path, class: 'btn btn-sm btn-primary' %>
  </div>
</div>
