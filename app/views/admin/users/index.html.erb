<h1>Users</h1>

<% if @users.present? %>
  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
        <th colspan=4>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user|%>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.roles.map(&:name).join(', ') unless user.roles.blank? %></td>
        <td><%= link_to 'Show', admin_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
        </td>
      </tr>
      <% end %>

    </tbody>
  </table>
<% else %>
    <p>No records found.</p>
<% end %>

<br/>

