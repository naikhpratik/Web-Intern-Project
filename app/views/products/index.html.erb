<h3>Products</h3>

<% if @products.present? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %> </td>
          <td><%= link_to 'Show', product %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No records found</p>
<% end %>
