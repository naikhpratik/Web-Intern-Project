<h1>Dashboard</h1>
<br>
<!-- Just For dashboard Home page with no users Signed in -->
<h4>List of Products</h4>
<% if @products.present? %>
<table>
  <thead>
    <tr>
      <th></th>
    </tr>
  </thead>

  <tbody>

    <% @products.each do |product| %>
    <tr>
      <td><%= product.name %> </td>
      <td><%= link_to 'Show', product %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<!-- Just For dashboard when admin logs in-->
<!-- Just For dashboard when any user Logs in -->
<% if user_signed_in? %>
<h4>List of Your Products</h4>
<% if @my_products.present? %>
<table>
  <thead>
    <tr>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @my_products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= link_to 'Show', product %></td>
      </tr>
    <% end %>

  </tbody>
</table>
<% end %>
<% end %>
