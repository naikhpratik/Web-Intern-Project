<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% if !user.isadmin %>
          <td><%= link_to 'Make admin', {:action => 'makeadmin', :id => user.id} %></td>
        <% else %>
          <td><%= link_to 'Remove admin', {:action => 'makeadmin', :id => user.id} %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

